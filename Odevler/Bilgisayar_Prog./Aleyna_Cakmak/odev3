int para = 10000
int faiz = 15
int yil = 0
int bakiye = para * (1,15 * para) ** yil
while bakiye < 20000:
  yil += 1
  bakiye = para * (1,15 * para) ** yil
print(" yıl sayısı:", yil)








int sayilar = []
int sayi;
sayi = input("Bir sayı giriniz: ")
  if int(sayi) >= 0:
    sayilar.append(int(sayi))
  else:
    break

int ortalama = sum(sayilar) / len(sayilar)
print("Girdiğiniz sayılar:", sayilar)
print("Ortalama:", ortalama)



tahminsayisi = 0
int rastgele
rastgele = randint(1, 10)
int tahmin;
tahmin = input("Tahmin etmeniz gereken sayı: ")
if int(tahmin) == rastgele:
  print("Tahmininiz doğru!")
else:
  print("Tahmininiz yanlış.")
while tahmin != rastgele:
  tahmin = input("Lütfen tahmininizi girin: ")
  tahminsayisi += 1
print("Tahminlerinizin sayısı:", tahminsayisi)
