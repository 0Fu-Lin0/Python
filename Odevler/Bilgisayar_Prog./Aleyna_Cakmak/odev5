  while True:
    degers = int(input("Bir değer girin (-1'e basın çıkmak için): "))
    if degers == -1:
      break
    deger.append(degers)

 
  limit = int(input("Limiti girin: "))


  index = 0
  for i in range(len(tumdeger)):
    if tumdeger[i] > limit:
      index = i
      break
  tumdeger.pop(index)


  print("Liste:", tumdeger)



  kelime = []
  for i in range(5):
