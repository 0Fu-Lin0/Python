      "source": [
        "def yildiz_ucgen(boyut):\n",
        "    for i in range(1, boyut + 1):\n",
        "        bosluk_sayisi = boyut - i\n",
        "        yildiz_sayisi = 2 * i - 1\n",
        "        bosluklar = ' ' * bosluk_sayisi\n",
        "        yildizlar = '*' * yildiz_sayisi\n",
        "        print(bosluklar + yildizlar)\n",
        "\n",
        "yukseklik = 5\n",
        "yildiz_ucgen(yukseklik)\n"
      ]
    }
  ]
