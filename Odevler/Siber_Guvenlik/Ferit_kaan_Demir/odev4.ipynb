ef is_binary(dizge):
    for karakter in dizge:
        if karakter not in {'0', '1'}:
            return False
    return True
girilen_dizge = input("Bir dizge girin: ")
sonuc = is_binary(girilen_dizge)

if sonuc:
    print(f"{girilen_dizge} bir ikili dizgedir.")
else:
    print(f"{girilen_dizge} bir ikili dizge değildir.")

