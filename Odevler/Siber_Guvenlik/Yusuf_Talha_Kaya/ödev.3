def ikili_to_ondalik(ikili_sayi):
    ondalik_deger = 0
    uzunluk = len(ikili_sayi)
    for i in range(uzunluk):
        ondalik_deger += int(ikili_sayi[uzunluk - i - 1]) * (2**i)
     return ondalik_deger
ikili_sayi = input("Bir ikili sayı girin: ")
ondalik_deger = ikili_to_ondalik(ikili_sayi)
print(f"Girdiğiniz ikili sayının ondalık karşılığı: {ondalik_deger}")







def is_binary(dizge):
    if not dizge:
        return False
    for karakter in dizge:
        if karakter != '0' and karakter != '1':
            return False
    return True

dizge = input("Bir dizge girin: ")
if is_binary(dizge):
    print("Girdiğiniz dizge ikili bir dizgedir.")
else:
    print("Girdiğiniz dizge ikili bir dizge değildir.")


